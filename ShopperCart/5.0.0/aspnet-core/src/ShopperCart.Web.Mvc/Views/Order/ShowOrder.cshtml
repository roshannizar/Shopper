
@{
    ViewData["Title"] = "Order Details";
}
<h3>Order</h3>
<a class="btn btn-outline-secondary btn-sm" asp-controller="Order" asp-action="Index">Back</a>
<a href="" class="btn btn-outline-danger btn-sm">Delete</a>
<button class="btn btn-primary btn-sm" id="SaveChanges" onclick="Confirm()" hidden>Save Changes</button>
<br />
<br />

<partial name="_OrderDetailCollapse" model="Model" />

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Order Items</h4>
    </div>
    <br />
    <div class="container-fluid">
        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createOrderModal">Add New Item</button>
    </div>
    @foreach (var items in Model.OrderItems)
    {
        <partial name="_EditOrder" model="@items" />
    }
</div>

<script src="~/view-resources/Views/Order/edit-order.js"></script>
